{% doc %}
  @prompt
    I want a section where I need to say the upload instructions, more exactly to upload outside taken pictures(with sunlight or good light), not blurry, good resolution photos only
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-upload-instructions-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
  }

  .ai-upload-instructions-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
  }

  .ai-upload-instructions-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-upload-instructions-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.spacing_between_elements }}px;
    color: {{ block.settings.icon_color }};
  }

  .ai-upload-instructions-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-upload-instructions-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    font-weight: 600;
  }

  .ai-upload-instructions-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    line-height: 1.6;
  }

  .ai-upload-instructions-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-upload-instructions-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: {{ block.settings.item_gap }}px;
    padding: {{ block.settings.item_padding }}px;
    margin-bottom: {{ block.settings.item_spacing }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    border-left: {{ block.settings.item_border_thickness }}px solid {{ block.settings.item_border_color }};
  }

  .ai-upload-instructions-item-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.item_icon_size }}px;
    height: {{ block.settings.item_icon_size }}px;
    color: {{ block.settings.item_icon_color }};
    margin-top: 2px;
  }

  .ai-upload-instructions-item-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-upload-instructions-item-content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-upload-instructions-item-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_title_size }}px;
    color: {{ block.settings.item_title_color }};
    font-weight: 600;
    margin: 0 0 4px;
  }

  .ai-upload-instructions-item-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.item_text_size }}px;
    color: {{ block.settings.item_text_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-upload-instructions-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }

    .ai-upload-instructions-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-upload-instructions-item-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<upload-instructions-{{ ai_gen_id }}
  class="ai-upload-instructions-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-upload-instructions-container-{{ ai_gen_id }}">
    <div class="ai-upload-instructions-header-{{ ai_gen_id }}">
      {% if block.settings.show_icon %}
        <div class="ai-upload-instructions-icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="17 8 12 3 7 8"></polyline>
            <line x1="12" y1="3" x2="12" y2="15"></line>
          </svg>
        </div>
      {% endif %}

      {% if block.settings.title != blank %}
        <h2 class="ai-upload-instructions-title-{{ ai_gen_id }}">
          {{ block.settings.title }}
        </h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-upload-instructions-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>

    <ul class="ai-upload-instructions-list-{{ ai_gen_id }}">
      {% if block.settings.show_sunlight_instruction %}
