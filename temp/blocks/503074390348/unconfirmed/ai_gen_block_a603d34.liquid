              {{ block.settings.sunlight_title }}
            </div>
            <div class="ai-upload-instructions-item-text-{{ ai_gen_id }}">
              {{ block.settings.sunlight_text }}
            </div>
          </div>
        </li>
      {% endif %}

      {% if block.settings.show_clarity_instruction %}
        <li class="ai-upload-instructions-item-{{ ai_gen_id }}">
          <div class="ai-upload-instructions-item-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
          </div>
          <div class="ai-upload-instructions-item-content-{{ ai_gen_id }}">
            <div class="ai-upload-instructions-item-title-{{ ai_gen_id }}">
              {{ block.settings.clarity_title }}
            </div>
            <div class="ai-upload-instructions-item-text-{{ ai_gen_id }}">
              {{ block.settings.clarity_text }}
            </div>
          </div>
        </li>
      {% endif %}

      {% if block.settings.show_resolution_instruction %}
        <li class="ai-upload-instructions-item-{{ ai_gen_id }}">
          <div class="ai-upload-instructions-item-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
              <circle cx="8.5" cy="8.5" r="1.5"></circle>
              <polyline points="21 15 16 10 5 21"></polyline>
            </svg>
          </div>
          <div class="ai-upload-instructions-item-content-{{ ai_gen_id }}">
            <div class="ai-upload-instructions-item-title-{{ ai_gen_id }}">
              {{ block.settings.resolution_title }}
            </div>
            <div class="ai-upload-instructions-item-text-{{ ai_gen_id }}">
              {{ block.settings.resolution_text }}
            </div>
          </div>
        </li>
      {% endif %}

      {% if block.settings.show_outdoor_instruction %}
        <li class="ai-upload-instructions-item-{{ ai_gen_id }}">
          <div class="ai-upload-instructions-item-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
              <circle cx="12" cy="13" r="4"></circle>
            </svg>
          </div>
          <div class="ai-upload-instructions-item-content-{{ ai_gen_id }}">
            <div class="ai-upload-instructions-item-title-{{ ai_gen_id }}">
              {{ block.settings.outdoor_title }}
            </div>
            <div class="ai-upload-instructions-item-text-{{ ai_gen_id }}">
              {{ block.settings.outdoor_text }}
            </div>
          </div>
        </li>
      {% endif %}
    </ul>
  </div>
</upload-instructions-{{ ai_gen_id }}>

<script>
  (function() {
    class UploadInstructions{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const list = this.querySelector('.ai-upload-instructions-list-{{ ai_gen_id }}');
        if (list) {
          list.setAttribute('role', 'list');
          const items = list.querySelectorAll('.ai-upload-instructions-item-{{ ai_gen_id }}');
          items.forEach(item => {
            item.setAttribute('role', 'listitem');
          });
        }
      }
    }

    customElements.define('upload-instructions-{{ ai_gen_id }}', UploadInstructions{{ ai_gen_id }});
  })();
</script>

