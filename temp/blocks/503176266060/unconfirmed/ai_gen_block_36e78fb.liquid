{% doc %}
  @prompt
    Generate a section that can add multiple columns, each column should have a title displayed under, and an image and a link
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multi-column-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-multi-column__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-multi-column__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-multi-column__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-multi-column__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-multi-column__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    margin-bottom: {{ block.settings.image_spacing }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-multi-column__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .ai-multi-column__image-wrapper-{{ ai_gen_id }}:hover img {
    transform: scale(1.05);
  }

  .ai-multi-column__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-multi-column__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-multi-column__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    color: {{ block.settings.title_color }};
    font-weight: 600;
  }

  .ai-multi-column__link-{{ ai_gen_id }} {
    display: inline-block;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    transition: color 0.3s ease;
  }

  .ai-multi-column__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  @media screen and (max-width: 989px) {
    .ai-multi-column__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-multi-column__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-multi-column__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.85);
    }

    .ai-multi-column__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }
  }
{% endstyle %}

<multi-column-{{ ai_gen_id }} class="ai-multi-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multi-column__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-multi-column__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-multi-column__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'column_' | append: i | append: '_image'
          assign title_key = 'column_' | append: i | append: '_title'
          assign link_key = 'column_' | append: i | append: '_link'
          assign link_text_key = 'column_' | append: i | append: '_link_text'

          assign column_image = block.settings[image_key]
          assign column_title = block.settings[title_key]
          assign column_link = block.settings[link_key]
          assign column_link_text = block.settings[link_text_key]
        %}

        {% if column_title != blank or column_image != blank %}
          <div class="ai-multi-column__item-{{ ai_gen_id }}">
            <div class="ai-multi-column__image-wrapper-{{ ai_gen_id }}">
              {% if column_image != blank %}
                <img
                  src="{{ column_image | image_url: width: 800 }}"
                  alt="{{ column_image.alt | escape }}"
                  loading="lazy"
                  width="{{ column_image.width }}"
                  height="{{ column_image.height }}"
                >
              {% else %}
                <div class="ai-multi-column__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if column_title != blank %}
              <h3 class="ai-multi-column__title-{{ ai_gen_id }}">{{ column_title }}</h3>
            {% endif %}

            {% if column_link != blank and column_link_text != blank %}
              <a href="{{ column_link }}" class="ai-multi-column__link-{{ ai_gen_id }}">
                {{ column_link_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</multi-column-{{ ai_gen_id }}>

